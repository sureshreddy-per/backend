# Application
PORT=8080  # Cloud Run preferred port
NODE_ENV=production

# Database (Cloud SQL)
DB_HOST=/cloudsql/PROJECT_ID:REGION:INSTANCE_NAME
DB_PORT=5432
DB_USER=postgres
DB_NAME=farmdeva
# DB_PASSWORD is stored in Secret Manager

# Redis (Memorystore)
REDIS_HOST=REDIS_IP
REDIS_PORT=6379

# JWT
# JWT_SECRET is stored in Secret Manager
JWT_EXPIRY=1h
JWT_REFRESH_EXPIRY=7d

# File Upload Settings
MAX_IMAGE_SIZE_MB=8
MAX_VIDEO_SIZE_MB=50
MAX_DOCUMENT_SIZE_MB=10
ALLOWED_IMAGE_TYPES=jpg,jpeg,png
ALLOWED_VIDEO_TYPES=mp4,mov
ALLOWED_DOCUMENT_TYPES=pdf,doc,docx,txt,xls,xlsx
USE_S3=false

# Security
MAX_LOGIN_ATTEMPTS=5
LOGIN_LOCKOUT_DURATION=900
PASSWORD_MIN_LENGTH=12
PASSWORD_REQUIRE_SPECIAL=true
PASSWORD_REQUIRE_NUMBER=true
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true

# GCP Configuration
STORAGE_PROVIDER=gcp
GCP_PROJECT_ID=YOUR_PROJECT_ID
GCP_STORAGE_BUCKET=YOUR_BUCKET_NAME
GOOGLE_CLOUD_PROJECT=YOUR_PROJECT_ID
CLOUD_RUN_SERVICE=farmdeva-backend
REGION=YOUR_REGION

# Admin Configuration
ADMIN_USERS=admin@farmdeva.com

# CORS Configuration
ALLOWED_ORIGINS=https://farmdeva.com,https://api.farmdeva.com
CORS_MAX_AGE=3600

# Rate Limiting
RATE_LIMIT_SHORT_TTL=60000
RATE_LIMIT_MEDIUM_TTL=300000
RATE_LIMIT_LONG_TTL=3600000
RATE_LIMIT_SHORT_MAX=30
RATE_LIMIT_MEDIUM_MAX=100
RATE_LIMIT_LONG_MAX=1000 
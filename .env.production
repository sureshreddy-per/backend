# Server Configuration
PORT=3000
NODE_ENV=production
API_URL=https://api.agrochain.com
ALLOWED_ORIGINS=https://agrochain.com

# Database
DB_HOST=your_gcp_db_host
DB_PORT=5432
DB_USER=your_prod_db_user
DB_PASSWORD=your_prod_db_password
DB_NAME=agrochain_prod

# Redis Cache
REDIS_HOST=your_redis_host
REDIS_PORT=6379
CACHE_TTL=300
CACHE_MAX_ITEMS=1000

# JWT Authentication
JWT_SECRET=your_strong_production_jwt_secret
JWT_EXPIRY=1h
JWT_REFRESH_EXPIRY=7d

# Google Cloud Platform
GCP_PROJECT_ID=your_prod_project_id
GCP_REGION=asia-south1
GCP_BUCKET_NAME=your_prod_bucket
GCP_SERVICE_ACCOUNT_KEY=your_prod_service_account_key

# External APIs
GOOGLE_MAPS_API_KEY=your_prod_maps_api_key
OPENWEATHERMAP_API_KEY=your_prod_weather_api_key
PAYMENT_GATEWAY_API_KEY=your_prod_payment_key
OPENAI_API_KEY=your_prod_openai_key

# File Upload Configuration
MAX_IMAGE_SIZE_MB=8
MAX_VIDEO_SIZE_MB=50
MAX_DOCUMENT_SIZE_MB=10
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,gif
ALLOWED_VIDEO_TYPES=mp4,mov,avi
ALLOWED_DOCUMENT_TYPES=pdf,doc,docx,txt,xls,xlsx
UPLOAD_DIR=uploads
USE_GCP_STORAGE=true

# Email Configuration
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=your_sendgrid_api_key
EMAIL_FROM=no-reply@agrochain.com

# Security
PASSWORD_MIN_LENGTH=12
PASSWORD_REQUIRE_SPECIAL=true
PASSWORD_REQUIRE_NUMBER=true
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
MAX_LOGIN_ATTEMPTS=5
LOGIN_LOCKOUT_DURATION=900
RATE_LIMIT_MAX=100
RATE_LIMIT_TTL=60
BCRYPT_SALT_ROUNDS=12

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=/var/log/agrochain/app.log

# Feature Flags
ENABLE_NOTIFICATIONS=true
ENABLE_EMAIL=true
ENABLE_SMS=true
ENABLE_WEATHER=true

# Admin Configuration
ADMIN_USERS=admin@agrochain.com

# Testing Configuration
USE_MOCK_AI_SERVICE=false 
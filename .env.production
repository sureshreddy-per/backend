# Application
PORT=443  # Standard HTTPS port
NODE_ENV=production

# Database
DB_HOST=postgres
DB_PORT=5432
DB_USER=farmdeva
DB_PASSWORD=farmdeva@123
DB_NAME=farmdeva_db

# Redis
REDIS_HOST=
REDIS_PORT=6379

# JWT
JWT_SECRET=
JWT_EXPIRY=1h
JWT_REFRESH_EXPIRY=7d

# File Upload Settings
MAX_IMAGE_SIZE_MB=8
MAX_VIDEO_SIZE_MB=50
MAX_DOCUMENT_SIZE_MB=10
ALLOWED_IMAGE_TYPES=jpg,jpeg,png
ALLOWED_VIDEO_TYPES=mp4,mov
ALLOWED_DOCUMENT_TYPES=pdf,doc,docx,txt,xls,xlsx
USE_S3=false

# Security
MAX_LOGIN_ATTEMPTS=5
LOGIN_LOCKOUT_DURATION=900
PASSWORD_MIN_LENGTH=12
PASSWORD_REQUIRE_SPECIAL=true
PASSWORD_REQUIRE_NUMBER=true
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true

# Storage Configuration
STORAGE_PROVIDER=gcp
GCP_PROJECT_ID=
GCP_KEY_FILE_PATH=
GCP_STORAGE_BUCKET=

# Admin Configuration
ADMIN_USERS=admin@farmdeva.com

# CORS Configuration
ALLOWED_ORIGINS=https://farmdeva.com,https://api.farmdeva.com
CORS_MAX_AGE=3600

# Rate Limiting
RATE_LIMIT_SHORT_TTL=60000
RATE_LIMIT_MEDIUM_TTL=300000
RATE_LIMIT_LONG_TTL=3600000
RATE_LIMIT_SHORT_MAX=30
RATE_LIMIT_MEDIUM_MAX=100
RATE_LIMIT_LONG_MAX=1000

USE_2FACTOR_SERVICE=true
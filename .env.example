NODE_ENV=production
PORT=3000
API_URL=https://api.example.com

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USER=user
DB_PASSWORD=password
DB_NAME=dbname

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=password
CACHE_TTL=300
CACHE_MAX_ITEMS=100

# JWT
JWT_SECRET=your-secret-key
JWT_EXPIRY=15d
JWT_REFRESH_EXPIRY=60d

# OpenAI
OPENAI_API_KEY=your-api-key
OPENAI_MODEL=gpt-4
OPENAI_API_ENDPOINT=https://api.openai.com/v1/chat/completions
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=1

# File Upload
MAX_IMAGE_SIZE_MB=8
MAX_VIDEO_SIZE_MB=50
MAX_THUMBNAIL_SIZE_MB=2
MAX_REPORT_SIZE_MB=10
MAX_DOCUMENT_SIZE_MB=10
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,gif,webp
ALLOWED_VIDEO_TYPES=mp4,mov,avi,webm
MAX_FILES_PER_REQUEST=5

# Storage
USE_GCP_STORAGE=true
STORAGE_PROVIDER=gcp
GCP_PROJECT_ID=your-project-id
GCP_STORAGE_BUCKET=your-bucket-name

# Security
MAX_LOGIN_ATTEMPTS=5
LOGIN_LOCKOUT_DURATION=900
PASSWORD_MIN_LENGTH=12
PASSWORD_REQUIRE_SPECIAL=true
PASSWORD_REQUIRE_NUMBER=true
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true

# API Configuration
ALLOWED_ORIGINS=https://example.com
CORS_MAX_AGE=3600

# Rate Limiting
RATE_LIMIT_SHORT_TTL=60000
RATE_LIMIT_MEDIUM_TTL=300000
RATE_LIMIT_LONG_TTL=3600000
RATE_LIMIT_SHORT_MAX=30
RATE_LIMIT_MEDIUM_MAX=100
RATE_LIMIT_LONG_MAX=1000 
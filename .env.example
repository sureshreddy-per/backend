# Server Configuration
PORT=3000
NODE_ENV=development
API_URL=http://localhost:3000/api
ALLOWED_ORIGINS=http://localhost:3000

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_NAME=your_db_name

# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
CACHE_TTL=300
CACHE_MAX_ITEMS=100

# JWT Authentication
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRY=24h
JWT_REFRESH_EXPIRY=7d

# Google Cloud Platform
GCP_PROJECT_ID=your_project_id
GCP_REGION=your_region
GCP_BUCKET_NAME=your_bucket_name
GCP_SERVICE_ACCOUNT_KEY=src/config/gcp-service-account-key.json

# External APIs
GOOGLE_MAPS_API_KEY=your_maps_api_key
OPENWEATHERMAP_API_KEY=your_weather_api_key
PAYMENT_GATEWAY_API_KEY=your_payment_key
OPENAI_API_KEY=your_openai_api_key

# File Upload Configuration
MAX_IMAGE_SIZE_MB=8
MAX_VIDEO_SIZE_MB=50
MAX_THUMBNAIL_SIZE_MB=2
MAX_REPORT_SIZE_MB=10
MAX_DOCUMENT_SIZE_MB=10
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,gif,webp
ALLOWED_VIDEO_TYPES=mp4,mov,avi,webm
ALLOWED_THUMBNAIL_TYPES=jpg,jpeg,png
ALLOWED_REPORT_TYPES=pdf
ALLOWED_DOCUMENT_TYPES=pdf,doc,docx,txt,xls,xlsx
UPLOAD_DIR=uploads
USE_GCP_STORAGE=true

# Maximum Files Per Request
MAX_FILES_PER_REQUEST=5

# Email Configuration
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASSWORD=your_smtp_password
EMAIL_FROM=noreply@example.com

# Security
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_SPECIAL=true
PASSWORD_REQUIRE_NUMBER=true
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
MAX_LOGIN_ATTEMPTS=5
LOGIN_LOCKOUT_DURATION=900
RATE_LIMIT_MAX=100
RATE_LIMIT_TTL=60
BCRYPT_SALT_ROUNDS=10

# Logging
LOG_LEVEL=debug
LOG_FILE_PATH=logs/app.log

# Feature Flags
ENABLE_NOTIFICATIONS=true
ENABLE_EMAIL=true
ENABLE_SMS=false
ENABLE_WEATHER=true

# Admin Configuration
ADMIN_USERS=admin@example.com

# Testing Configuration
USE_MOCK_AI_SERVICE=true

# 2Factor Configuration
TWO_FACTOR_API_KEY=your_2factor_api_key
TWO_FACTOR_TEMPLATE_NAME=your_template_name

# OpenAI Configuration
OPENAI_MODEL=gpt-4o-mini
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=2000
ENABLE_AI_FEATURES=true

# System Configuration Defaults
MAX_DAILY_PRICE_UPDATES=3
MAX_GEOSPATIAL_RADIUS_KM=50
BASE_FEE_PERCENTAGE=2
MIN_INSPECTION_FEE=100
MAX_INSPECTION_FEE=5000
INSPECTION_BASE_FEE=500
INSPECTION_FEE_PER_KM=5

# Fee Configuration Defaults
DEFAULT_FEE_PER_KM=5
DEFAULT_MAX_DISTANCE_FEE=500

# Cache Configuration
ADMIN_CACHE_TTL=3600
ADMIN_BATCH_SIZE=50
OFFERS_CACHE_PREFIX=offer:
OFFERS_BATCH_SIZE=50
AUTO_OFFER_CACHE_TTL=3600
AUTO_OFFER_CACHE_PREFIX=auto_offer:

# S3 Configuration
S3_MAX_ATTEMPTS_PROD=5
S3_MAX_ATTEMPTS_DEV=3 
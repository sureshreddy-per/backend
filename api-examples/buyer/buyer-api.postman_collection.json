            "body": {
              "mode": "raw",
              "raw": "{\n  \"address\": \"Updated Address\",\n  \"lat_lng\": \"12.9716-77.5946\",\n  \"registration_number\": \"REG123\",\n  \"business_name\": \"Updated Business\",\n  \"gst\": \"GST123456\"\n}"

              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/inspectors/nearby?lat=12.9716&lng=77.5946&radius=10",
              "host": ["{{base_url}}"],
              "path": ["inspectors", "nearby"],
              "query": [
                {
                  "key": "lat",
                  "value": "12.9716"
                },
                {
                  "key": "lng",
                  "value": "77.5946"
                },
                {
                  "key": "radius",
                  "value": "10"
                }

# Server Configuration
PORT=3000
NODE_ENV=development
API_URL=http://localhost:3000/api
ALLOWED_ORIGINS=http://localhost:3000

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=agrochain_dev

# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6379
CACHE_TTL=300
CACHE_MAX_ITEMS=100

# JWT Authentication
JWT_SECRET=dev_jwt_secret_key_change_in_production
JWT_EXPIRY=24h
JWT_REFRESH_EXPIRY=7d

# Google Cloud Platform
GCP_PROJECT_ID=sapient-torch-447917-k7
GCP_REGION=ASIA
GCP_BUCKET_NAME=farmdeva-dev-001-asia
GCP_SERVICE_ACCOUNT_KEY=src/config/gcp-service-account-key.json

# External APIs
GOOGLE_MAPS_API_KEY=your_dev_maps_api_key
OPENWEATHERMAP_API_KEY=your_dev_weather_api_key
PAYMENT_GATEWAY_API_KEY=your_dev_payment_key
OPENAI_API_KEY=your_dev_openai_key

# File Upload Configuration
MAX_IMAGE_SIZE_MB=8
MAX_VIDEO_SIZE_MB=50
MAX_THUMBNAIL_SIZE_MB=2
MAX_REPORT_SIZE_MB=10
MAX_DOCUMENT_SIZE_MB=10
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,gif,webp
ALLOWED_VIDEO_TYPES=mp4,mov,avi,webm
ALLOWED_THUMBNAIL_TYPES=jpg,jpeg,png
ALLOWED_REPORT_TYPES=pdf
ALLOWED_DOCUMENT_TYPES=pdf,doc,docx,txt,xls,xlsx
UPLOAD_DIR=uploads
USE_GCP_STORAGE=true

# Maximum Files Per Request
MAX_FILES_PER_REQUEST=5

# Email Configuration
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USER=your_mailtrap_user
SMTP_PASSWORD=your_mailtrap_password
EMAIL_FROM=dev@agrochain.com

# Security
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_SPECIAL=true
PASSWORD_REQUIRE_NUMBER=true
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
MAX_LOGIN_ATTEMPTS=5
LOGIN_LOCKOUT_DURATION=900
RATE_LIMIT_MAX=100
RATE_LIMIT_TTL=60
BCRYPT_SALT_ROUNDS=10

# Logging
LOG_LEVEL=debug
LOG_FILE_PATH=logs/app.log

# Feature Flags
ENABLE_NOTIFICATIONS=true
ENABLE_EMAIL=true
ENABLE_SMS=false
ENABLE_WEATHER=true

# Admin Configuration
ADMIN_USERS=admin@agrochain.com

# Testing Configuration
USE_MOCK_AI_SERVICE=true

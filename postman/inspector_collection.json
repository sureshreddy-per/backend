    {
      "name": "Inspections",
      "item": [
        {
          "name": "List Inspections",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{inspector_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/quality/inspections?page=1&limit=10&status=PENDING&sortBy=status&sortOrder=ASC&lat=12.9716&lng=77.5946",
              "host": ["{{base_url}}"],
              "path": ["quality", "inspections"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                },
                {
                  "key": "status",
                  "value": "PENDING"
                },
                {
                  "key": "search",
                  "value": ""
                },
                {
                  "key": "sortBy",
                  "value": "status"
                },
                {
                  "key": "sortOrder",
                  "value": "ASC"
                },
                {
                  "key": "lat",
                  "value": "12.9716"
                },
                {
                  "key": "lng",
                  "value": "77.5946"
                }
              ]
            },
            "description": "Get a paginated list of inspections available for the inspector"
          }
        },
        {
          "name": "Get Inspection Details",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{inspector_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/quality/inspections/:id",
              "host": ["{{base_url}}"],
              "path": ["quality", "inspections", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": ""
                }
              ]
            },
            "description": "Get details of a specific inspection request"
          }
        },
        {
          "name": "Accept Inspection",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{inspector_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/quality/inspections/:id/assign",
              "host": ["{{base_url}}"],
              "path": ["quality", "inspections", ":id", "assign"],
              "variable": [
                {
                  "key": "id",
                  "value": ""
                }
              ]
            },
            "description": "Accept and assign an inspection request to self"
          }
        },
        {
          "name": "Submit Inspection Result",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{inspector_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"quality_grade\": 8.5,\n    \"confidence_level\": 95,\n    \"defects\": [\"minor_bruising\", \"slight_discoloration\"],\n    \"recommendations\": [\"improve_packaging\", \"adjust_storage_temperature\"],\n    \"category_specific_assessment\": {\n        \"moisture_content\": 12.5,\n        \"ripeness_level\": \"optimal\",\n        \"size_uniformity\": \"high\"\n    },\n    \"notes\": \"Overall good quality with minor improvements needed\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/quality/inspections/:id/submit-result",
              "host": ["{{base_url}}"],
              "path": ["quality", "inspections", ":id", "submit-result"],
              "variable": [
                {
                  "key": "id",
                  "value": ""
                }
              ]
            },
            "description": "Submit inspection results for a completed inspection"
          }
        }
      ]
